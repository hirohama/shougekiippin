/* Slider */
.slick-loading .slick-list
{
    background: #fff url('./ajax-loader.gif') center center no-repeat;
}

/* Icons */
@font-face
{
    font-family: 'slick';
    font-weight: normal;
    font-style: normal;

    src: url('_font_slick.eot');
    src: url('_font_slick.eot?#iefix') format('embedded-opentype'), url('_font_slick.woff') format('woff'), url('_font_slick.ttf') format('truetype'), url('_font_slick.svg#slick') format('svg');
}
/* Arrows */
.slick-prev,
.slick-next
{
    width: 10rem;
    height: 100%;
    display: block;
    background: none;
    position: absolute;
    top: 0;
    z-index: 10;
}
.slick-prev:active,
.slick-next:active
{
    opacity: .50;
}

@media screen and (min-width: 1024px) {
    .slick-prev:active,
    .slick-next:active
    {
        opacity: .50;
    }
    .slick-prev:hover,
    .slick-next:hover
    {
        opacity: .75;
    }
}
