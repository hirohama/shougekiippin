/* Dots */
.slick-dotted.slick-slider
{
    margin-bottom: 0px;
}

.slick-dots
{
    position: absolute;
    z-index: 1;
    /*bottom:calc(-20px - 2vw);*/
    left: calc(50% - 3vw);
    display: block;
    width: calc(8vw + 3px);
    height:2vw;
    padding: 0 1vw;
    margin: 0 auto;
    list-style: none;
    text-align: center;
    line-height: 0;
    background: #FC0;
    border-left:1px solid #333;
    border-bottom:1px solid #333;
    border-right:1px solid #333;
    border-radius: 0 0 0.35vw 0.35vw;
}
.slick-dots li
{
    position: relative;
    display: inline-block;
    width: 1.2vw;
    height: calc(0.7vw + 2px);
    line-height:0;
    text-align: center;
    margin: 0.6vw 0;
    padding: 0;
    cursor: pointer;
}
.slick-dots li button
{
    font-size: 0;
    display: block;
    width: 0.7vw;
    height: 0.7vw;
    cursor: pointer;
    outline: none;
    margin:auto;
    border:1px solid #666;
    border-radius: 0.35vw;
    background: #b39e4a;
}
.slick-dots li button:hover,
.slick-dots li button:focus
{
    outline: none;
}
.slick-dots li button:hover:before,
.slick-dots li button:focus:before
{
    opacity: 1;
}
.slick-dots li.slick-active button{
    background: #FFF;
}