/*-----------header-----------*/
header{
    position:relative;
    display:block;
    width: 100%;
    z-index: 99;
    text-align: right;
}
.fixed{
    position: fixed;
    top: 0;
    right: 0;
}
.absolute{
    position: absolute;
    top: 0;
    right: 0;
}
header.fixed{
    background: rgba(255,255,255,0.9);
    border-bottom:1px solid #000;
    padding:1vw 0 1vw;
}
header.absolute/*下層*/{
    background: none;
    padding:3vw 0;
}

header#menu_index.absolute/*top*/{
    background: none;
    padding:2vw 0;
}
    header #logo_box{
        position: relative;
    }
    header#menu_index.fixed #logo_box,/*top*/
    header#menu.fixed #logo_box,/*下層*/
    header#menu.absolute #logo_box/*下層*/{
        display: block;
    }
    header#menu_index.absolute #logo_box/*top*/{
        display: none;
    }
    #menu_logo{
        position: absolute;
        left:0;
        top:0;
    }
    header #menu_logo{
        width:15vw;
        margin:-0.7vw 0 0 2vw;
        float:left;
    }
    header ul{
        display: inline-block;
    }
    
    header ul li{
        font-size:1.1vw;
        display:inline-block;
        margin-right:2vw;
        vertical-align: middle;
    }
    header ul li:last-child{
        display:inline-block;
        margin-right:0;
    }
    header ul li .menu_cart_btn{
        cursor:pointer;
        position:relative;
        display:block;
        width:13vw;
        height:3.4vw;
        border-left:1px solid #000;
        border-top:1px solid #000;
        border-bottom:1px solid #000;
        background:#FC0;
        border-radius: 9999px 0 0 9999px;
    }
        .menu_cart_btn span.info{
            display:table-cell;
            width:calc(11vw - 2px);
            height:calc(3.4vw - 2px);
            vertical-align: middle;
            text-align: right;
            font-size: 1.1vw;
        }
        .menu_cart_btn .icon{
            display:block;
            position: absolute;
            top:0.3vw;
            left:0.3vw;
            width:calc(2.8vw - 2px);
            height:calc(2.8vw - 2px);
            background: #FFF;
            border-radius: 9999px;
        }
            .menu_cart_btn .icon.cart_look{
                background-image: url("{{ '_img_cart_look.svg' | asset_url }}");
                background-size: 90%;
                background-repeat: no-repeat;
                background-position: 50% 50%;
            }

header #draw_product_menu_box{/*product用の購入boxで、位置だけを参照*/
    width:0;
    height:0;
    position: relative;
    overflow: visible;
    z-index: -1;
}

header.absolute #draw_product_menu_box{
    display:none;
    visibility: hidden;
}
header.fixed #draw_product_menu_box{
    display: block;
    visibility: visible;
}
    #draw_product_menu_box #draw_product_menu{
        position: absolute;
        top:calc(1vw + 1px);left:3vw;
        width:22vw;
        height:4vw;
        overflow: hidden;
        transition : height 0.8s;
        display:block;
    }
    #draw_product_menu_box.active #draw_product_menu{
        height:50vw;
        display:block;
    }
        #draw_product_menu_box .draw_product_content_box{
            transform : translate(0, -31vw);
            transition : transform 0.8s;
        }
        #draw_product_menu_box.active .draw_product_content_box{
            transform : translate(0, 0vw);
        }
        #draw_product_menu_box .draw_product_content{
            opacity : 0;
            margin:1vw 0 0;
            width:22vw;
            min-height:30vw;
            background: #FFF;
            border:1px solid #000;
            border-radius:1vw;
            padding:1vw;
            transition : opacity 0.8s;
        }
        #draw_product_menu_box.active .draw_product_content{
            opacity : 1;
        }
        #draw_product_menu_box .draw_product_content .img{
            display:block;
            width:100%;
            height:11.5vw;
            margin:auto;
            border-radius: 0.5vw;
            background-repeat:no-repeat;
            background-position:center;
            background-size:100% auto;
        }
        #draw_product_menu_box .item_name{
            text-align:left;
        }
            #draw_product_menu_box .item_name h1{
                display: block;
                font-size: 1.3vw;
                line-height: 1.8vw;
                padding:1vw 0 0 0;
            }
            #draw_product_menu_box .item_name span{
                display: block;
                font-size: 1vw;
            }

            #draw_product_menu_box .count{
                font-size:1vw;
                padding:0.3vw 0;
            }
        #draw_product_menu .draw_product_btn{
            width:22vw;
            height:2.5vw;
            padding:0.5vw;
            text-align: center;
            font-size:1.1vw;
            line-height: 1.5vw;
            background: #FC0;
            border:1px solid #000;
            border-radius: 0.5vw;
            margin:0.5vw 0 0 0;
            cursor: pointer;

            transform : translate(0, -31vw);
            transition : transform 0.8s;
        }
        #draw_product_menu_box.active .draw_product_btn{
            transform : translate(0, 0vw);
        }
            #draw_product_menu_box .draw_product_btn .down,
            #draw_product_menu_box.active .draw_product_btn .up{
                display:inline-block;
            }
            #draw_product_menu_box .draw_product_btn .up,
            #draw_product_menu_box.active .draw_product_btn .down{
                display:none;
            }

