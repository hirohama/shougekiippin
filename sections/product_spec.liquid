<div class="content">
  <div id="product_spec_box">
    <ul id="product_spec" class="clearfix">
      <li id="to_eat">
        <h3 class="foJ_Bld">商品情報</h3>
        <div class="img" style="background-image:url('{{ product.images[5] | img_url:"original" }}');"></div>
        <h4 class="foJ_Mid">お召し上がり方</h4>
        <span class="foJ_Thin">{{ product.metafields.custom.to_eat }}</span>
      </li>
      <li id="component">
        <h4 class="foJ_Mid">成分表示</h4>
        <table>
          {% for i in (0..100) %}
            {% if product.metafields.custom.component_title.value[i] == blank %}
              {% break %}
            {% else %}
            <tr>
              <th class="foJ_Thin">{{ product.metafields.custom.component_title.value[i] }}</th>
              <td class="foJ_Thin">{{ product.metafields.custom.component_content.value[i] }}</td>
            </tr>
            {% endif %}
          {% endfor %}
        </table>
      </li>
      <li id="store_information">
        <h3 class="foJ_Bld">店舗案内</h3>
        <div class="img" style="background-image:url('{{ product.images[6] | img_url:"original" }}');"></div>
        <h4 class="foJ_Mid">{{ product.metafields.custom.storename }}</h4>
        <span class="foJ_Thin">{{ product.metafields.custom.address }}</span>
        <table>
          {% for i in (0..100) %}
            {% if product.metafields.custom.store_information_title.value[i] == blank %}
              {% break %}
            {% else %}
            <tr>
              <th class="foJ_Thin">{{ product.metafields.custom.store_information_title.value[i] }}</th>
              <td class="foJ_Thin">{{ product.metafields.custom.store_information_content.value[i] }}</td>
            </tr>
            {% endif %}
          {% endfor %}
        </table>
      </li>
    </ul>
    <div id="product_accessmap">
      <h3 class="foJ_Bld">アクセスマップ</h3>
      <script>
        const uri = "{{ product.metafields.custom.storename }}";
        const encoded = encodeURI(uri);
        document.write('<iframe width="100%" height="300px" frameborder="0" style="border:0" referrerpolicy="no-referrer-when-downgrade" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDCLuYv-53j-5LC4QVa1gJBw1nIJW5rBtg&q=' + encoded + '&zoom=15" allowfullscreen></iframe>');
      </script>
    </div>
  </div>
  <!-- //product_spec_box -->
</div>
{% schema %}
