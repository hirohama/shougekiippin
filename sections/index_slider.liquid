<div id="slider_box">
  <ul id="slider">
  {% for block in section.blocks limit: section.blocks.size %}
  {% if block.settings.image_box != blank %}
    <li class="slide_clip">
      <div class="noren">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 492.12 495.89"><defs><style>.pNoren{fill:#fff;}</style></defs>
          <g>
            <path class="pNoren" d="M0,0V235.69c0-4.6,1.8,260.2,1.8,260.2H489.2c3.3-75.7,2.9-253.6,2.9-302V.2H0" />
          </g>
        </svg>
      </div>
      <a href="{{ block.settings.link }}"><img src="{{ block.settings.image_box | img_url: 'original' }}" alt=""></a>
    </li>
  {% endif %}
  {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "のれんバナー部分",
  "blocks": [
    {
         "type": "image",
         "name": "画像block",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_box",
      "label": "画像を選ぶ"
    },
    {
      "type": "url",
      "id": "link",
      "label": "URL"
    }
   ]
  }
 ],

"presets": [
   {
     "name": "テスト画像",
     "category": "画像"
   }
 ]
}
{% endschema %}

