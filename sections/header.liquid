<div id="logo_box">
  <a href="{{ routes.root_url }}"><div id="menu_logo"><img src="{{ '_img_logo_sub.svg' | asset_url }}"></div></a>
</div>
  <menu>
    <ul>
      <li class="foJ_Mid"><a href="{{ routes.root_url }}">TOP</a></li>
      <li class="foJ_Mid"><a href="#">「衝撃一品」とは？</a></li>
      <li class="foJ_Mid"><a href="#">よくあるご質問</a></li>
